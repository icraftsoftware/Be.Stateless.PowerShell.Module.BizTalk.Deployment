<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <RootNamespace>Be.Stateless.BizTalk</RootNamespace>
    <AssemblyName>Be.Stateless.BizTalk.Deployment.Cmdlets</AssemblyName>
    <Description>PowerShell commands to leverage and operate the BizTalk.Factory's runtime libraries and C#-embedded Domain Specific Languages (DSL) dedicated to Microsoft BizTalk Server.</Description>
  </PropertyGroup>

  <PropertyGroup>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/icraftsoftware/Be.Stateless.PowerShell.Module.BizTalk.Deployment</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <!-- embed source files that are not tracked by the source control manager in the PDB -->
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>

  <PropertyGroup>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DocumentationFile>bin\Release\$(AssemblyName).xml</DocumentationFile>
    <NoWarn>1701;1702</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Deployment\Cmdlet\ExpandApplicationBinding.Trimmer.xslt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Deployment\Cmdlet\Binding\ExpandApplicationBinding.Trimmer.xslt" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\.settings\.editorconfig" Link=".editorconfig" />
    <None Include="..\..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Be.Stateless.BizTalk.Abstractions" Version="2.0.21302.29426" />
    <PackageReference Include="Be.Stateless.BizTalk.Dsl.Abstractions" Version="2.0.21284.50613" />
    <PackageReference Include="Be.Stateless.BizTalk.Dsl.Binding" Version="2.0.21285.44387" />
    <PackageReference Include="Be.Stateless.BizTalk.Dsl.Binding.Conventions" Version="2.0.21285.44387" />
    <PackageReference Include="Be.Stateless.BizTalk.Dsl.Environment.Settings" Version="2.0.21285.44387" />
    <PackageReference Include="Be.Stateless.BizTalk.Dsl.Pipeline" Version="2.0.21285.44011" />
    <PackageReference Include="Be.Stateless.BizTalk.Explorer" Version="2.0.21281.40704" />
    <PackageReference Include="Be.Stateless.BizTalk.Messaging" Version="2.0.21308.31565" />
    <PackageReference Include="Be.Stateless.BizTalk.Pipeline.Components" Version="2.0.21285.43232" />
    <PackageReference Include="Be.Stateless.BizTalk.Pipeline.MicroComponents" Version="2.0.21302.35531" />
    <PackageReference Include="Be.Stateless.BizTalk.Settings" Version="2.0.21285.38408" />
    <PackageReference Include="Be.Stateless.BizTalk.Stream" Version="2.0.21285.39338" />
    <PackageReference Include="Be.Stateless.BizTalk.Xml" Version="2.0.21285.38612" />
    <PackageReference Include="Be.Stateless.Dsl.Configuration" Version="2.0.21284.31509" />
    <PackageReference Include="Be.Stateless.Extensions" Version="2.0.21308.30406" />
    <PackageReference Include="Be.Stateless.Reflection" Version="2.0.21281.37160" />
    <PackageReference Include="Be.Stateless.Runtime" Version="2.0.21285.37924" />
    <PackageReference Include="Be.Stateless.Security" Version="2.0.21281.38867" />
    <PackageReference Include="Be.Stateless.Stream" Version="2.0.21281.39270" />
    <PackageReference Include="Be.Stateless.Xml" Version="2.0.21281.40683" />
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="5.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.PowerShell.5.1.ReferenceAssemblies" Version="1.0.0" />
  </ItemGroup>

</Project>
